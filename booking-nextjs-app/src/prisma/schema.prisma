generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Flight {
  id            String          @id @default(uuid())
  fromAirportId String
  fromDatetime  DateTime
  toAirportId   String
  toDatetime    DateTime
  company       String
  price         Float
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  toAirport     Airport         @relation("Arrival", fields: [toAirportId], references: [id])
  fromAirport   Airport         @relation("Departure", fields: [fromAirportId], references: [id])
  flightRoutes  FlightsRoutes[]
}

model Airport {
  id          String   @id @default(uuid())
  name        String
  code        String   @unique
  city        String
  country     String
  flightsTo   Flight[] @relation("Arrival")
  flightsFrom Flight[] @relation("Departure")
}

model Route {
  id           String          @id @default(uuid())
  carts        Cart[]
  flightRoutes FlightsRoutes[]
}

model FlightsRoutes {
  id         String @id @default(uuid())
  sequenceId Int
  flightId   String
  routeId    String
  route      Route  @relation(fields: [routeId], references: [id])
  flight     Flight @relation(fields: [flightId], references: [id])

  @@unique([sequenceId, routeId])
}

model Cart {
  id      String @id @default(uuid())
  routeId String
  route   Route  @relation(fields: [routeId], references: [id])
}

model Reservation {
  id        String   @id @default(uuid())
  data      Json
  status    String   @default("IN_PROCESSING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
